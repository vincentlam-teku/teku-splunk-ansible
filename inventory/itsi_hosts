# servers that are meant to be license masters, will also have the common config applied.
#
[licenser]
#127.0.0.1
172.31.4.64

# servers that are meant to be deployer, will also have the common config applied.
#
[deployer]
#127.0.0.1
172.31.4.64

# servers that are meant to be indexers, will also have the common config applied.
#
[indexer]
#127.0.0.1
172.31.8.81
172.31.14.67
172.31.11.208

[indexer:vars]
cluster_mode=slave

# servers that are meant to be splunk search heads, will also have the common config applied.
#
[search]
#127.0.0.1
172.31.0.15

[search:vars]
cluster_mode=searchhead

[common:children]
master
licenser
indexer
search

[indexer_cluster:children]
indexer
